<% include ../partials/header %> <!-- header -->
<% include ../partials/sidebar %> <!-- sidebar -->
<!-- Start Content -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">Create Attendance Record</div>
            <div class="card-body card-block">
                    <div class="form-group">
                        <label class=" form-control-label">Attendance Date</label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                            <input class="form-control" type='date' name='attendance_date' required>
                        </div>
                    </div>
                    <div class="form-group">
                            <select required data-placeholder="Select members present" multiple class="standardSelect" tabindex="5">
                                <option value="" label="default"></option>
                                <% 
                                let home_cells = ['Flagstaff House', 'Nima Yellow House', 'Nima Mission House', 'Nima Police Barracks', 'Cantonment', 'Ablekuma',
                                'Mamobi', 'Odorkor', 'Sankara', 'Burma Camp', 'Agbogba', 'Russia', 'Kanda Water Works', 'Kanda Post Office', 'Teshie/Nungua']; 
                                home_cells.forEach(home_cell => {
                                %>
                                    <optgroup label="<%= home_cell %>">
                                    <%
                                        members.forEach( member => {
                                            if( member.home_cell == home_cell){
                                    %> 
                                            <option value="<%= member.id %>"><%= member.full_name %></option>
                                    <%  } }); %> 
                                    </optgroup>  
                                <% }); %>
                        </select>
                    </div>
                    <div class="form-actions form-group">
                        <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End Content -->
<% include ../partials/footer %> <!-- footer -->