<% include ../partials/header %> <!-- header -->
<% include ../partials/sidebar %> <!-- sidebar -->
<!-- Start Content -->
<div class="row">
    <div class="container">
        <div class="col-12 col-md-12">
            <div class="mt-2 card">
                <h4 class="text-center card-header">Attendance Record</h4>
                <div class="px-md-4 card-body card-block">
                <form method="POST" action="/member_attendance/create">
                        <div class="form-group">
                            <label class="my-2 form-control-label">Date Attended</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                                <input class="form-control" type='date' name='attendance_date' required/>
                            </div>
                        </div>
                        <div class="form-group">
                               <label class="my-2 form-control-label">Choose Member(s)</label>
                                <select name="members" required data-placeholder="Member(s) Present" multiple class="standardSelect" tabindex="5">
                                    <option value="" label="default"></option>
                                    <% 
                                    let home_cells = ['Flagstaff House', 'Nima Yellow House', 'Nima Mission House', 'Nima Police Barracks', 'Cantonment', 'Ablekuma',
                                    'Mamobi', 'Odorkor', 'Sankara', 'Burma Camp', 'Agbogba', 'Russia', 'Kanda Water Works', 'Kanda Post Office', 'Teshie/Nungua']; 
                                    home_cells.forEach(home_cell => {
                                    %>
                                        <optgroup label="<%= home_cell %>">
                                        <%
                                            members.forEach( member => {
                                                if( member.home_cell == home_cell){
                                        %> 
                                                <option value="<%= member.id %>"><%= member.full_name %></option>
                                        <%  } }); %> 
                                        </optgroup>  
                                    <% }); %>
                            </select>
                        </div>
                        <div class="form-actions form-group">
                            <button type="submit" class="btn btnPent text-white btn-secondary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Content -->
<% include ../partials/footer %> <!-- footer -->