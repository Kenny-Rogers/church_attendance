<% include ../partials/header %>
<!-- header -->
<% include ../partials/sidebar %>
<!-- sidebar -->
<!-- Start Content -->
<div class="row">
  <div class="container">
    <div class="col-12 col-md-12">
      <div class="mt-2 card">
        <div class="card-header text-center"><strong>Add Member</strong></div>
        <div class="card-body p-md-5 card-block">
          <form action="/members/create" method="post" class="form-horizontal">
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="text-input" class=" form-control-label"
                  >Full Name</label
                >
              </div>
              <div class="col-12 col-md-9">
                <input
                  required
                  type="text"
                  id="text-input"
                  name="full_name"
                  placeholder="John Doe"
                  class="form-control"
                />
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="email-input" class=" form-control-label"
                  >Date of Birth</label
                >
              </div>
              <div class="col-12 col-md-9">
                <input type="date" name="dob" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="email-input" class=" form-control-label"
                  >Date Baptized</label
                >
              </div>
              <div class="col-12 col-md-9">
                <input type="date" name="date_baptized" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="email-input" class=" form-control-label"
                  >Contact Number</label
                >
              </div>
              <div class="col-12 col-md-9">
                <input
                  type="text"
                  name="contact"
                  pattern="0[25]{1}[467]{1}[0-9]{7}"
                  placeholder="0244444446"
                  class="form-control"
                />
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="text-input" class=" form-control-label"
                  >Baptized by</label
                >
              </div>
              <div class="col-12 col-md-9">
                <input
                  required
                  type="text"
                  id="text-input"
                  name="baptized_by"
                  placeholder="John Doe"
                  class="form-control"
                />
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="email-input" class=" form-control-label"
                  >Date Transferred into Assembly</label
                >
              </div>
              <div class="col-12 col-md-9">
                <input
                  type="date"
                  name="date_transferred_into_assembly"
                  class="form-control"
                />
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="email-input" class=" form-control-label"
                  >Date Transferred out of Assembly</label
                >
              </div>
              <div class="col-12 col-md-9">
                <input
                  type="date"
                  name="date_transferred_out_of_assembly"
                  class="form-control"
                />
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label class=" form-control-label">Gender</label>
              </div>
              <div class="col col-md-9">
                <div class="form-check-inline form-check ">
                  <label for="inline-radio1" class="form-check-label mr-3">
                    <input
                      type="radio"
                      required
                      id="inline-radio1"
                      name="gender"
                      value="Male"
                      class="form-check-input"
                    />Male
                  </label>
                  <label for="inline-radio2" class="form-check-label ">
                    <input
                      type="radio"
                      required
                      id="inline-radio2"
                      name="gender"
                      value="female"
                      class="form-check-input"
                    />Female
                  </label>
                </div>
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="text-input" class=" form-control-label"
                  >Hometown</label
                >
              </div>
              <div class="col-12 col-md-9">
                <input
                  required
                  type="text"
                  id="text-input"
                  name="hometown"
                  placeholder="John Doe"
                  class="form-control"
                />
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="home_cell" class=" form-control-label"
                  >Home Cell</label
                >
              </div>
              <div class="col-12 col-md-9">
                <select
                  name="home_cell"
                  required
                  id="home_cell"
                  class="form-control"
                >
                  <option value="">Please select</option>
                  <option value="Flagstaff House">Flagstaff House</option>
                  <option value="Nima Yellow House">Nima Yellow House</option>
                  <option value="Nima Mission House">Nima Mission House</option>
                  <option value="Nima Police Barracks"
                    >Nima Police Barracks</option
                  >
                  <option value="Cantonment">Cantonment</option>
                  <option value="Ablekuma">Ablekuma</option>
                  <option value="Mamobi">Mamobi</option>
                  <option value="Odorkor">Odorkor</option>
                  <option value="Sankara">Sankara</option>
                  <option value="Burma Camp">Burma Camp</option>
                  <option value="Agbogba">Agbogba</option>
                  <option value="Russia">Russia</option>
                  <option value="Kanda Water Works">Kanda Water Works</option>
                  <option value="Kanda Post Office">Kanda Post Office</option>
                  <option value="Teshie/Nungua">Teshie/Nungua</option>
                </select>
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label class=" form-control-label">Martial Status</label>
              </div>
              <div class="col col-md-9">
                <div class="form-check-inline form-check ">
                  <label for="Single" class="form-check-label mr-3">
                    <input
                      type="radio"
                      required
                      id="Single"
                      name="marital_status"
                      value="Single"
                      class="form-check-input"
                    />Single
                  </label>
                  <label for="Married" class="form-check-label mr-3">
                    <input
                      type="radio"
                      required
                      id="Married"
                      name="marital_status"
                      value="Married"
                      class="form-check-input"
                    />Married
                  </label>
                  <label for="Divorced" class="form-check-label ">
                    <input
                      type="radio"
                      required
                      id="Divorced"
                      name="marital_status"
                      value="Divorced"
                      class="form-check-input"
                    />Divorced
                  </label>
                </div>
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="text-input" class=" form-control-label"
                  >Occupation</label
                >
              </div>
              <div class="col-12 col-md-9">
                <input
                  required
                  type="text"
                  id="text-input"
                  name="occupation"
                  placeholder="John Doe"
                  class="form-control"
                />
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="text-input" class=" form-control-label"
                  >Remarks</label
                >
              </div>
              <div class="col-12 col-md-9">
                <textarea
                  name="remarks"
                  id="textarea-input"
                  placeholder="Remarks..."
                  class="form-control"
                ></textarea>
              </div>
            </div>
            <div class="form-actions form-group">
              <button type="submit" class="btn btnPent text-white btn-secondary">
                <i class="fa fa-dot-circle-o"></i> Submit
              </button>
              <button type="reset" class="btn btn-danger btn-secondary">
                <i class="fa fa-ban"></i> Reset
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End Content -->
<% include ../partials/footer %>
<!-- footer -->
