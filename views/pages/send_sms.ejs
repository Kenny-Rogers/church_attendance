<% include ../partials/header %> <!-- header -->
<% include ../partials/sidebar %> <!-- sidebar -->
<!-- Start Content -->
<div class="row">
    <div class="container">
        <div class="col-12 col-md-12">
            <div class="mt-2 card">
                <h4 class="text-center card-header">Send Sms</h4>
                <div class="px-md-4 card-body card-block">
                <form method="POST" action="/send_sms/send">
                        <div class="form-group">
                            <label class="my-2 form-control-label">Telephone number(s)</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-phone"></i></div>
                                <input class="form-control" type='text' name='numbers' required/>
                            </div>
                        </div>
                        <div class="form-group">
                               <label class="my-2 form-control-label">Message</label>
                               <textarea name="message" id="textarea-input" placeholder="Text message..." class="form-control" required></textarea>
                        </div>
                        <div class="form-actions form-group">
                            <button type="submit" class="btn btnPent text-white btn-secondary">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Content -->
<% include ../partials/footer %> <!-- footer -->